<% content_for :title, "New menu" %>

<h1>New menu</h1>

<%= form_with(model: @menu) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, 
          value: "TODAY'S SPECIALS", 
          class: "form-control form-control-sm",
          style: "width: 3in;",
          onclick: "this.select()" %>
  </div>

  <div class="field mt-3">
    <%= form.label :date %>
    <%= form.date_field :date, 
          value: Date.today, 
          class: "form-control form-control-sm",
          style: "width: 3in;" %>
  </div>

  <div class="actions mt-3">
    <%= form.submit "Create Menu", class: "btn btn-primary" %>
  </div>
<% end %>

<br>

<div>
  <%= link_to "<- Back to Menus", menus_path, class: 'btn btn-secondary' %>
</div>