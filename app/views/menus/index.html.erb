<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Menus</h1>
    <%= link_to 'New Menu', new_menu_path, class: 'btn btn-primary' %>
  </div>

  <div class="row">
    <% @menus.each do |menu| %>
      <div class="col-md-4 mb-4">
        <%= link_to menu_path(menu), class: 'text-decoration-none' do %>
          <div class="card h-100 menu-card" style="height: 200px; background-color: #f5f5f5; border: none;">
            <div class="card-body d-flex flex-column justify-content-center p-4">
              <h5 class="card-title text-center mb-2 text-dark"><%= menu.title.upcase %></h5>
              <div class="text-center text-muted">
                <%= menu.date.strftime("%B %d, %Y") %>
              </div>
            </div>
          </div>
        <% end %>
        <div class="mt-2 d-flex justify-content-center gap-2">
          <%= link_to 'Edit', edit_menu_path(menu), class: 'btn btn-sm btn-outline-primary' %>
          <%= button_to 'Delete', menu_path(menu), 
                method: :delete, 
                form: { data: { turbo_confirm: 'Are you sure you want to delete this menu?' } },
                class: 'btn btn-sm btn-outline-danger' %>
        </div>
      </div>
    <% end %>
  </div>
</div>